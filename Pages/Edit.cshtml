@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit ToDo</h2>

<form method="post">
    <input type="hidden" asp-for="Item.Id" />
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Item.Title" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="Item.IsDone" class="form-check-input" />
        <label class="form-check-label">Is Done</label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>
